/*
 *  浏览器滚动条样式
 */

html::-webkit-scrollbar-track
{
	-webkit-box-shadow: inset 0 0 6px #eeeeee;
	background-color: #eeeeee;
}

html::-webkit-scrollbar
{
	width: 6px;
	background-color: #eeeeee;
}

html::-webkit-scrollbar-thumb
{
	background-color: rgba(0,0,0,0.2);
}


